{
    "compilerOptions": {
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "checkJs": false,
        "module": "commonJs",
        "target": "ES6",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "types": [],
        "lib": [
            "ES6",
            "DOM"
        ],
        "incremental": true,
        "skipLibCheck": true,
        "baseUrl": ".",
    },
    "exclude": [
        "node_modules",
        "./*/**/jest.config.js",
        "./*/**/webpack.config.js",
        ".yarn",
        "reporter.js"
    ]
}
